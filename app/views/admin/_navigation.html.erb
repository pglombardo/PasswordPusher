<!-- Admin Header -->
<div class="d-flex flex-column justify-content-center align-items-center gap-2 mt-4 pb-4 border-bottom">
  <div>
    <%= link_to root_path do %>
      <%= image_tag asset_path("naked-logo.png"), class: "img-fluid", style: "max-height: 60px;" %>
    <% end %>
  </div>
  <div class="text-center">
    <p class="h6 fw-bold text-dark mb-1"><%= _("Password Pusher") %></p>
    <h1 class="h6 fw-semibold">
      <%= link_to admin_root_path, class: "text-muted text-decoration-none" do %>
        <%= _("Administration Center") %>
      <% end %>
    </h1>
    <div class="mt-2">
      <span class="badge bg-warning text-dark px-2 py-1 fw-semibold" style="font-size: 0.7rem;">
        <%= _("BETA") %>
      </span>
    </div>
  </div>
</div>

<!-- Navigation -->
<nav class="mt-4">
  <!-- Administration Home -->
  <div class="mb-4">
    <%= link_to admin_root_path, class: "d-flex align-items-center px-3 py-2 text-decoration-none rounded-3 transition-all #{'bg-primary bg-opacity-10 text-primary fw-semibold' if current_page?(admin_root_path)} #{'text-dark hover-bg-light' unless current_page?(admin_root_path)}" do %>
      <svg class="me-3" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <%= _("Administration Home") %>
    <% end %>
  </div>

  <!-- System Administration Section -->
  <div class="mb-4">
    <h6 class="px-3 text-muted text-uppercase small fw-semibold mb-3"><%= _("System Administration") %></h6>
    <div class="d-grid gap-1">
      <%= link_to admin_users_path, class: "d-flex align-items-center px-3 py-2 text-decoration-none rounded-3 transition-all #{'bg-primary bg-opacity-10 text-primary fw-semibold' if current_page?(admin_users_path)} #{'text-dark hover-bg-light' unless current_page?(admin_users_path)}" do %>
        <svg class="me-3" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <%= _("Admin Users") %>
      <% end %>

      <%= link_to madmin_root_path, class: "d-flex align-items-center px-3 py-2 text-decoration-none rounded-3 transition-all #{'bg-primary bg-opacity-10 text-primary fw-semibold' if current_page?(madmin_root_path)} #{'text-dark hover-bg-light' unless current_page?(madmin_root_path)}" do %>
        <svg class="me-3" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
        </svg>
        <%= _("Data Explorer") %>
      <% end %>

      <%= link_to "/admin/jobs", class: "d-flex align-items-center px-3 py-2 text-decoration-none rounded-3 transition-all #{'bg-primary bg-opacity-10 text-primary fw-semibold' if current_page?('/admin/jobs')} #{'text-dark hover-bg-light' unless current_page?('/admin/jobs')}" do %>
        <svg class="me-3" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <%= _("Background Jobs") %>
      <% end %>
    </div>
  </div>
</nav>

<footer class="mt-auto pt-4">
  <div class="px-3">
    <%= link_to "https://apnotic.com", target: "_blank", class: "d-flex align-items-center px-3 py-2 text-decoration-none rounded-3 text-muted hover-bg-light transition-all small" do %>
      Â© 2011-<%= Date.current.year %> Apnotic, LLC
    <% end %>
  </div>
</footer>
