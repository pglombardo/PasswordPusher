<%= button_to path,
    method: :delete,
    class: "btn btn-outline-danger btn-sm d-flex align-items-center",
    data: {
      turbo: true,
      turbo_confirm: _("⚠️ WARNING: Deleting %{email} will also permanently delete ALL %{count} push(es) created by this user. This action cannot be undone. Are you sure you want to proceed?") %
      { email: user.email, count: push_count }
    } do %>
  <svg class="me-1" width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
  </svg>
  <%= local_assigns[:button_text] || _("Delete") %>
<% end %>
